<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.school.elite_driving.controller.receptionist.AddReceptionistFormController">
   <children>
      <Label layoutX="50.0" layoutY="30.0" text="Add New Receptionist">
         <font>
            <Font name="Arial Bold" size="20.0" />
         </font>
      </Label>
      
      <Label layoutX="50.0" layoutY="80.0" text="User ID:">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtUserId" layoutX="50.0" layoutY="105.0" prefHeight="30.0" prefWidth="400.0" />
      
      <Label layoutX="50.0" layoutY="150.0" text="Username:">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtUserName" layoutX="50.0" layoutY="175.0" prefHeight="30.0" prefWidth="400.0" />
      
      <Label layoutX="50.0" layoutY="220.0" text="Password:">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="txtPassword" layoutX="50.0" layoutY="245.0" prefHeight="30.0" prefWidth="400.0" />
      
      <Label layoutX="50.0" layoutY="290.0" text="Confirm Password:">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="txtConfirmPassword" layoutX="50.0" layoutY="315.0" prefHeight="30.0" prefWidth="400.0" />
      
      <Button fx:id="btnSave" layoutX="250.0" layoutY="360.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Save" />
      <Button fx:id="btnCancel" layoutX="360.0" layoutY="360.0" mnemonicParsing="false" onAction="#btnCancelOnAction" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Cancel" />
   </children>
</AnchorPane>